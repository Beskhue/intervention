#!/usr/bin/env python3
"""Intervention learning entrypoints."""

import click
from loguru import logger
import sys


@click.group()
def cli():
    pass


@cli.command()
def demo():
    import intervention.run

    intervention.run.demo()


@cli.command()
def manual():
    import intervention.run

    intervention.run.manual()


@cli.command()
def collect():
    import intervention.run

    intervention.run.collect()


@cli.command()
@click.option("-n", "--num_episodes", required=True, type=int)
def collect_teacher_examples(num_episodes: int):
    import intervention.run

    intervention.run.collect_example_episodes(num_episodes=num_episodes)


if __name__ == "__main__":
    logger.remove(handler_id=0)  # Remove default handler.
    logger.add(
        sys.stderr,
        level="TRACE",
        format=(
            "<green>{time:YYYY-MM-DD HH:mm:ss.SSS}</green>"
            "| <red>{process.name: <10} {thread.name: <10}</red>"
            "| <level>{level: <8}</level>"
            "| <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan>"
            "- <level>{message}</level>"
        ),
    )

    cli()
