#!/usr/bin/env python3

import click
from loguru import logger
import sys

import intervention.run


@click.group()
def cli():
    pass


@cli.command()
def demo():
    intervention.run.run()

@cli.command()
def collect():
    print("asd")


if __name__ == "__main__":
    logger.remove(handler_id=0)  # Remove default handler.
    logger.add(
        sys.stderr,
        level="TRACE",
        format=(
            "<green>{time:YYYY-MM-DD HH:mm:ss.SSS}</green>"
            "| <red>{thread.name: <10}</red>"
            "| <level>{level: <8}</level>"
            "| <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan>"
            "- <level>{message}</level>"
        ),
    )

    cli()
